<%= simple_form_for @idea do |f| %>

  <%= f.input :title %><br><br>

  <%= f.label :rich_description %>
  <%= f.rich_text_area :rich_description, class: "customized-min-height" %><br><br>

  <%= f.input :photos, as: :file, input_html: { multiple: true } %><br><br>


  <%= f.button :submit, class: "btn btn-outline-success" %>
<% end %>

